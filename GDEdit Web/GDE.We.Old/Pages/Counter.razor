@page "/counter"
@using GDE.We.Old.Data

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="@IncrementCount">Click me</button>

@code 
{
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }

    protected override void OnInit()
    {
        base.OnInit();
        GlobalVariables.CurrentSection = GlobalVariables.LinkItems.Help;
    }

}
