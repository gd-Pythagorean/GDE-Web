@page
@model CounterModel

@{
    ViewData["SubSection"] = "Counter";
    ViewData["Title"] = "Help";
}

<h1>Counter</h1>

<p id="count">Current count: 0</p>

<button class="btn btn-primary" onclick="IncrementCount()">Click me</button>

<script>
let currentCount = 0;

function IncrementCount()
{
    currentCount++;
    
    let element = document.getElementById("count");
    element.innerText = `Current count: ${currentCount}`;
}
</script>