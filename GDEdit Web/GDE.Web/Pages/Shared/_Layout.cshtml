<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    @if (ViewData["SubSection"] != null && (string) ViewData["SubSection"] != "")
    {
        <title>@ViewData["SubSection"] · @ViewData["Title"] | GDEdit</title>
    }
    else
    {
        <title>@ViewData["Title"] | GDEdit</title>
    }
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="css/site.css">
    <style>
    	:root
    	{
    		--currentHue: @Helper.SectionToHueMap(GlobalVariables.CurrentSection);
    	}
    </style>
</head>
<body>
<div style="margin-bottom: 20px">
    <partial name="NavBar"/>
</div>

<div class="content px-4">
    @RenderBody()
</div>

</body>
</html>